<% layout('layouts/main') %>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Admin Dashboard</h2>
        <div>
            <a href="/admin/bulk" class="btn btn-outline-primary me-2">
                <i class="bi bi-file-earmark-arrow-up me-1"></i>Bulk Import
            </a>
            <a href="/admin/add" class="btn btn-primary">
                <i class="bi bi-plus-lg me-1"></i>Add New Match
            </a>
        </div>
    </div>

    <!-- Stats Row -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white h-100">
                <div class="card-body">
                    <h6 class="card-title opacity-75">Total Matches</h6>
                    <h2 class="display-6 fw-bold mb-0"><%= stats.total %></h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark h-100">
                <div class="card-body">
                    <h6 class="card-title opacity-75">Upcoming</h6>
                    <h2 class="display-6 fw-bold mb-0"><%= stats.upcoming %></h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white h-100">
                <div class="card-body">
                    <h6 class="card-title opacity-75">Wins</h6>
                    <h2 class="display-6 fw-bold mb-0"><%= stats.won %></h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white h-100">
                <div class="card-body">
                    <h6 class="card-title opacity-75">Finished</h6>
                    <h2 class="display-6 fw-bold mb-0"><%= stats.finished %></h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Tabs -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white">
            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item">
                    <a class="nav-link <%= filter === 'all' ? 'active' : '' %>" href="?filter=all">All Matches</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= filter === 'upcoming' ? 'active' : '' %>" href="?filter=upcoming">Upcoming</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= filter === 'finished' ? 'active' : '' %>" href="?filter=finished">Finished</a>
                </li>
            </ul>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-3">Date</th>
                            <th>Match</th>
                            <th>Prediction</th>
                            <th>Status</th>
                            <th>Result</th>
                            <th class="text-end pe-3">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (matches.length === 0) { %>
                            <tr>
                                <td colspan="6" class="text-center py-4 text-muted">No matches found.</td>
                            </tr>
                        <% } else { %>
                            <% matches.forEach(match => { %>
                                <tr>
                                    <td class="ps-3 small text-muted">
                                        <%= helpers.formatDate(match.match_date, 'MMM DD, HH:mm') %>
                                    </td>
                                    <td>
                                        <div class="fw-bold"><%= match.home_team %> vs <%= match.away_team %></div>
                                        <div class="small text-muted"><%= match.league %></div>
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark border"><%= match.prediction %></span>
                                        <div class="small mt-1">Conf: <%= match.confidence %>%</div>
                                    </td>
                                    <td>
                                        <% if (match.status === 'upcoming') { %>
                                            <span class="badge bg-primary">Upcoming</span>
                                        <% } else { %>
                                            <span class="badge bg-secondary">Finished</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (match.status === 'finished') { %>
                                            <span class="fw-bold"><%= match.result_score %></span>
                                            <% if (match.bet_status === 'won') { %>
                                                <i class="bi bi-check-circle-fill text-success ms-1"></i>
                                            <% } else { %>
                                                <i class="bi bi-x-circle-fill text-danger ms-1"></i>
                                            <% } %>
                                        <% } else { %>
                                            <button class="btn btn-sm btn-outline-secondary" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#resultModal" 
                                                    data-id="<%= match.id %>"
                                                    data-teams="<%= match.home_team %> vs <%= match.away_team %>">
                                                Add Result
                                            </button>
                                        <% } %>
                                    </td>
                                    <td class="text-end pe-3">
                                        <div class="btn-group">
                                            <a href="/admin/edit/<%= match.id %>" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form action="/admin/delete/<%= match.id %>" method="POST" class="d-inline" onsubmit="return confirm('Delete this match?');">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
        
        <!-- Pagination -->
        <% if (pagination.totalPages > 1) { %>
            <div class="card-footer bg-white">
                <nav>
                    <ul class="pagination justify-content-center mb-0">
                        <% if (pagination.hasPrevPage) { %>
                            <li class="page-item"><a class="page-link" href="?page=<%= pagination.prevPage %>&filter=<%= filter %>">Prev</a></li>
                        <% } %>
                        <li class="page-item active"><span class="page-link"><%= pagination.currentPage %></span></li>
                        <% if (pagination.hasNextPage) { %>
                            <li class="page-item"><a class="page-link" href="?page=<%= pagination.nextPage %>&filter=<%= filter %>">Next</a></li>
                        <% } %>
                    </ul>
                </nav>
            </div>
        <% } %>
    </div>
</div>

<!-- Update Result Modal -->
<div class="modal fade" id="resultModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Match Result</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/admin/update-result" method="POST">
                <div class="modal-body">
                    <input type="hidden" name="match_id" id="modalMatchId">
                    <p class="fw-bold mb-3" id="modalMatchTeams"></p>
                    
                    <div class="mb-3">
                        <label class="form-label">Score (Home-Away)</label>
                        <input type="text" name="result_score" class="form-control" placeholder="e.g. 2-1" required pattern="\d+-\d+">
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Bet Status</label>
                        <select name="bet_status" class="form-select" required>
                            <option value="won">Won</option>
                            <option value="lost">Lost</option>
                            <option value="void">Void</option>
                            <option value="push">Push</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save Result</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // Handle Modal Data
    const resultModal = document.getElementById('resultModal');
    if (resultModal) {
        resultModal.addEventListener('show.bs.modal', event => {
            const button = event.relatedTarget;
            const id = button.getAttribute('data-id');
            const teams = button.getAttribute('data-teams');
            
            resultModal.querySelector('#modalMatchId').value = id;
            resultModal.querySelector('#modalMatchTeams').textContent = teams;
        });
    }
</script>
