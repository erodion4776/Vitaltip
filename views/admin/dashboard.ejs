<!DOCTYPE html>
<html lang="en">
<head>
    <title>Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 p-6">
    <div class="max-w-6xl mx-auto">
        
        <!-- Header -->
        <div class="flex flex-col md:flex-row justify-between items-center mb-8 gap-4">
            <h1 class="text-3xl font-bold text-gray-800">Dashboard</h1>
            <div class="flex gap-3">
                <a href="/" target="_blank" class="bg-white text-gray-700 border px-4 py-2 rounded font-bold hover:bg-gray-50">View Site</a>
                <a href="/admin/bulk" class="bg-blue-600 text-white px-5 py-2 rounded shadow font-bold hover:bg-blue-700">âš¡ AI Import</a>
                <a href="/admin/add" class="bg-emerald-600 text-white px-5 py-2 rounded shadow font-bold hover:bg-emerald-700">+ Add One</a>
            </div>
        </div>

        <!-- Match List -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
            <table class="w-full text-left border-collapse">
                <thead class="bg-gray-50 text-gray-500 text-xs uppercase font-bold border-b">
                    <tr>
                        <th class="p-4">Date</th>
                        <th class="p-4">Match</th>
                        <th class="p-4 text-right">Result Control</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100 text-sm">
                    <% matches.forEach(match => { %>
                    <tr class="hover:bg-gray-50">
                        <td class="p-4 text-gray-500 whitespace-nowrap">
                            <%= new Date(match.match_date).toLocaleDateString() %>
                        </td>
                        <td class="p-4">
                            <div class="font-bold text-gray-800"><%= match.home_team %> vs <%= match.away_team %></div>
                            <div class="text-xs text-gray-400 mt-1"><%= match.league %></div>
                            <div class="text-xs text-emerald-600 font-bold mt-1">Tip: <%= match.prediction %></div>
                        </td>
                        <td class="p-4 text-right">
                            <% if(match.status !== 'finished') { %>
                                <form action="/admin/update-result" method="POST" class="flex justify-end gap-2">
                                    <input type="hidden" name="match_id" value="<%= match.id %>">
                                    <input type="text" name="result_score" placeholder="1-0" class="border p-1 w-12 text-center rounded bg-gray-50" required>
                                    <select name="bet_status" class="border p-1 rounded bg-gray-50 text-xs">
                                        <option value="won">Won</option>
                                        <option value="lost">Lost</option>
                                        <option value="void">Void</option>
                                    </select>
                                    <button class="bg-slate-800 text-white px-3 py-1 rounded text-xs hover:bg-black">Save</button>
                                </form>
                            <% } else { %>
                                <span class="font-mono font-bold"><%= match.result_score %></span>
                                <span class="text-xs uppercase font-bold text-gray-400 ml-2"><%= match.bet_status %></span>
                            <% } %>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
