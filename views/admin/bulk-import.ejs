<% layout('layouts/main') %>

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h4 class="mb-0 fw-bold">Bulk Import Matches</h4>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-info mb-4">
                        <h6 class="alert-heading"><i class="bi bi-info-circle me-2"></i>Instructions</h6>
                        <p class="mb-0 small">Paste a JSON array of match objects. Max <%= maxImport %> matches per request.</p>
                        <hr>
                        <pre class="bg-dark text-white p-3 rounded small mb-0">
[
  {
    "league": "Premier League",
    "match_date": "2024-01-20T15:00:00.000Z",
    "home_team": "Arsenal",
    "away_team": "Chelsea",
    "prediction": "Home Win",
    "confidence": 85,
    "odds": "1.95"
  }
]</pre>
                    </div>

                    <form action="/admin/bulk-import" method="POST">
                        <div class="mb-3">
                            <label class="form-label">JSON Data</label>
                            <textarea name="jsonData" class="form-control font-monospace" rows="10" placeholder="Paste JSON array here..." required></textarea>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="/admin/dashboard" class="btn btn-light me-2">Cancel</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-cloud-upload me-2"></i>Process Import
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
