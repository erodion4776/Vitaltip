<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BetVital - Free Football Predictions</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-800">

    <!-- Header -->
    <nav class="bg-emerald-700 text-white p-4 shadow-md">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-2xl font-bold tracking-tighter">BetVital</h1>
            <a href="/admin/dashboard" class="text-sm bg-emerald-800 px-3 py-1 rounded">Admin</a>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mx-auto p-4 max-w-4xl">
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="p-4 bg-emerald-600 text-white font-bold">
                Today's Predictions
            </div>

            <!-- Match Table -->
            <div class="overflow-x-auto">
                <table class="w-full text-sm text-left">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-200">
                        <tr>
                            <th class="px-4 py-3">Time</th>
                            <th class="px-4 py-3">Match</th>
                            <th class="px-4 py-3">Tip</th>
                            <th class="px-4 py-3">Conf.</th>
                            <th class="px-4 py-3 text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(matches.length === 0) { %>
                            <tr><td colspan="5" class="p-4 text-center">No matches posted yet.</td></tr>
                        <% } %>

                        <% matches.forEach(match => { %>
                        <tr class="border-b hover:bg-gray-50">
                            <td class="px-4 py-3">
                                <%= new Date(match.match_date).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %>
                            </td>
                            <td class="px-4 py-3 font-medium">
                                <div class="text-xs text-gray-500"><%= match.league %></div>
                                <%= match.home_team %> <span class="text-gray-400">vs</span> <%= match.away_team %>
                            </td>
                            <td class="px-4 py-3 font-bold text-emerald-600">
                                <%= match.prediction %>
                            </td>
                            <td class="px-4 py-3">
                                <div class="w-full bg-gray-200 rounded-full h-2.5">
                                    <div class="bg-emerald-500 h-2.5 rounded-full" style="width: <%= match.confidence %>%"></div>
                                </div>
                                <span class="text-xs text-gray-500"><%= match.confidence %>%</span>
                            </td>
                            <td class="px-4 py-3 text-center">
                                <a href="/prediction/<%= match.slug %>" class="bg-gray-800 text-white px-3 py-1 rounded text-xs hover:bg-black">
                                    Analysis
                                </a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</body>
</html>
