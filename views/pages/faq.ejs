<% layout('layouts/main') %>

<section class="bg-gradient-primary text-white py-5">
    <div class="container text-center">
        <h1 class="fw-bold">Frequently Asked Questions</h1>
        <p class="lead">Common questions about our predictions and services.</p>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="accordion shadow-sm" id="faqAccordion">
                    
                    <!-- Question 1 -->
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                                How accurate are your predictions?
                            </button>
                        </h2>
                        <div id="faq1" class="accordion-collapse collapse show" data-bs-parent="#faqAccordion">
                            <div class="accordion-body text-muted">
                                We use a combination of statistical analysis, team form, head-to-head records, and expert insights. While no prediction is guaranteed, our historical win rate (viewable on the Results page) typically ranges between 70-80%.
                            </div>
                        </div>
                    </div>

                    <!-- Question 2 -->
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                                When are predictions posted?
                            </button>
                        </h2>
                        <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body text-muted">
                                Daily predictions are usually posted by 10:00 AM (UTC) for that day's matches. Weekend predictions are often posted on Friday evenings.
                            </div>
                        </div>
                    </div>

                    <!-- Question 3 -->
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                                Is this a betting site?
                            </button>
                        </h2>
                        <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body text-muted">
                                <strong>No.</strong> Vital Tips Pro is an informational analysis site. We do not accept bets or facilitate gambling. We provide statistics and opinions for informational purposes only.
                            </div>
                        </div>
                    </div>

                    <!-- Question 4 -->
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq4">
                                Do I need to pay for tips?
                            </button>
                        </h2>
                        <div id="faq4" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body text-muted">
                                Currently, all our predictions are free to view. We may introduce premium features in the future, but our core daily tips remain free.
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
