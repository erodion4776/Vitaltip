<% layout('layouts/main') %>

<!-- Hero Section -->
<section class="hero-section bg-gradient-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7">
                <h1 class="display-4 fw-bold mb-3">
                    Expert Football Predictions
                </h1>
                <p class="lead mb-4">
                    Get winning predictions backed by advanced statistical analysis 
                    and expert insights from professional tipsters.
                </p>
                <div class="d-flex gap-3 flex-wrap">
                    <a href="#predictions" class="btn btn-light btn-lg px-4">
                        <i class="bi bi-calendar-event me-2"></i>Today's Tips
                    </a>
                    <a href="/results" class="btn btn-outline-light btn-lg px-4">
                        <i class="bi bi-graph-up me-2"></i>View Results
                    </a>
                </div>
            </div>
            <div class="col-lg-5 mt-4 mt-lg-0">
                <!-- Stats Cards -->
                <div class="row g-3">
                    <div class="col-6">
                        <div class="stat-card bg-white bg-opacity-10 rounded-3 p-4 text-center">
                            <i class="bi bi-trophy fs-1 mb-2 text-warning"></i>
                            <h3 class="fw-bold mb-0"><%= stats.winRate %>%</h3>
                            <small>Win Rate</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="stat-card bg-white bg-opacity-10 rounded-3 p-4 text-center">
                            <i class="bi bi-check-circle fs-1 mb-2 text-success"></i>
                            <h3 class="fw-bold mb-0"><%= stats.won %></h3>
                            <small>Wins</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="stat-card bg-white bg-opacity-10 rounded-3 p-4 text-center">
                            <i class="bi bi-calendar-check fs-1 mb-2 text-info"></i>
                            <h3 class="fw-bold mb-0"><%= stats.total %></h3>
                            <small>Predictions</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="stat-card bg-white bg-opacity-10 rounded-3 p-4 text-center">
                            <i class="bi bi-clock fs-1 mb-2 text-warning"></i>
                            <h3 class="fw-bold mb-0"><%= stats.upcoming %></h3>
                            <small>Upcoming</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Predictions Section -->
<section id="predictions" class="py-5">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold mb-0">
                <i class="bi bi-calendar-event me-2 text-primary"></i>Upcoming Predictions
            </h2>
            <div class="btn-group">
                <button class="btn btn-outline-primary active" data-filter="all">All</button>
                <button class="btn btn-outline-primary" data-filter="today">Today</button>
                <button class="btn btn-outline-primary" data-filter="tomorrow">Tomorrow</button>
            </div>
        </div>
        
        <% if (matches.length === 0) { %>
            <div class="text-center py-5">
                <i class="bi bi-calendar-x display-1 text-muted"></i>
                <h4 class="mt-3">No upcoming predictions</h4>
                <p class="text-muted">Check back soon for new match predictions!</p>
            </div>
        <% } else { %>
            <div class="row g-4">
                <% matches.forEach(match => { %>
                    <div class="col-lg-6">
                        <div class="match-card card border-0 shadow-sm h-100 hover-lift">
                            <div class="card-header bg-transparent border-0 pt-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="badge bg-primary-subtle text-primary">
                                        <i class="bi bi-trophy me-1"></i><%= match.league %>
                                    </span>
                                    <span class="text-muted small">
                                        <i class="bi bi-clock me-1"></i>
                                        <%= helpers.formatDate(match.match_date, 'MMM DD, HH:mm') %>
                                    </span>
                                </div>
                            </div>
                            
                            <div class="card-body">
                                <!-- Teams -->
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div class="team text-center flex-fill">
                                        <% if (match.home_logo) { %>
                                            <img src="<%= match.home_logo %>" alt="<%= match.home_team %>" class="team-logo mb-2">
                                        <% } else { %>
                                            <div class="team-logo-placeholder mb-2">
                                                <i class="bi bi-shield-fill"></i>
                                            </div>
                                        <% } %>
                                        <h6 class="mb-0 fw-semibold"><%= match.home_team %></h6>
                                        <small class="text-muted">Form: <%= match.home_form %></small>
                                    </div>
                                    
                                    <div class="vs-badge mx-3">
                                        <span class="badge bg-dark rounded-pill px-3 py-2">VS</span>
                                    </div>
                                    
                                    <div class="team text-center flex-fill">
                                        <% if (match.away_logo) { %>
                                            <img src="<%= match.away_logo %>" alt="<%= match.away_team %>" class="team-logo mb-2">
                                        <% } else { %>
                                            <div class="team-logo-placeholder mb-2">
                                                <i class="bi bi-shield-fill"></i>
                                            </div>
                                        <% } %>
                                        <h6 class="mb-0 fw-semibold"><%= match.away_team %></h6>
                                        <small class="text-muted">Form: <%= match.away_form %></small>
                                    </div>
                                </div>
                                
                                <!-- Prediction -->
                                <div class="prediction-box bg-light rounded-3 p-3 mb-3">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <small class="text-muted d-block">Our Prediction</small>
                                            <span class="fw-bold text-primary"><%= match.prediction %></span>
                                        </div>
                                        <div class="text-end">
                                            <small class="text-muted d-block">Confidence</small>
                                            <% const conf = helpers.getConfidenceLabel(match.confidence); %>
                                            <span class="badge bg-<%= conf.class %>"><%= match.confidence %>% - <%= conf.label %></span>
                                        </div>
                                    </div>
                                    
                                    <!-- Confidence Progress Bar -->
                                    <div class="progress mt-2" style="height: 6px;">
                                        <div class="progress-bar bg-<%= conf.class %>" 
                                             style="width: <%= match.confidence %>%"></div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="card-footer bg-transparent border-0 pb-3">
                                <a href="/prediction/<%= match.slug %>" class="btn btn-primary w-100">
                                    <i class="bi bi-eye me-2"></i>View Full Analysis
                                </a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
            
            <!-- Pagination -->
            <% if (pagination.totalPages > 1) { %>
                <nav class="mt-5">
                    <ul class="pagination justify-content-center">
                        <% if (pagination.hasPrevPage) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= pagination.prevPage %>">
                                    <i class="bi bi-chevron-left"></i> Previous
                                </a>
                            </li>
                        <% } %>
                        
                        <% for (let i = 1; i <= pagination.totalPages; i++) { %>
                            <li class="page-item <%= i === pagination.currentPage ? 'active' : '' %>">
                                <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                            </li>
                        <% } %>
                        
                        <% if (pagination.hasNextPage) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= pagination.nextPage %>">
                                    Next <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            <% } %>
        <% } %>
    </div>
</section>

<!-- Features Section -->
<section class="bg-light py-5">
    <div class="container">
        <h2 class="text-center fw-bold mb-5">Why Choose Us?</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card text-center p-4">
                    <div class="feature-icon bg-primary bg-opacity-10 rounded-circle mx-auto mb-3">
                        <i class="bi bi-graph-up-arrow fs-1 text-primary"></i>
                    </div>
                    <h5 class="fw-bold">Data-Driven Analysis</h5>
                    <p class="text-muted mb-0">
                        Our predictions are based on comprehensive statistical analysis and historical data.
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card text-center p-4">
                    <div class="feature-icon bg-success bg-opacity-10 rounded-circle mx-auto mb-3">
                        <i class="bi bi-trophy fs-1 text-success"></i>
                    </div>
                    <h5 class="fw-bold">Proven Track Record</h5>
                    <p class="text-muted mb-0">
                        Consistent winning results verified through transparent result tracking.
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card text-center p-4">
                    <div class="feature-icon bg-warning bg-opacity-10 rounded-circle mx-auto mb-3">
                        <i class="bi bi-lightning-charge fs-1 text-warning"></i>
                    </div>
                    <h5 class="fw-bold">Real-Time Updates</h5>
                    <p class="text-muted mb-0">
                        Get instant notifications and live updates for all our predictions.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
