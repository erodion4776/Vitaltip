<% layout('layouts/main') %>

<section class="bg-gradient-primary text-white py-5">
    <div class="container text-center">
        <h1 class="fw-bold mb-3">Prediction Results</h1>
        <p class="lead mb-0">Track our performance history and transparency.</p>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <!-- Win Rate Stat -->
        <div class="row justify-content-center mb-5">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm text-center py-4">
                    <div class="card-body">
                        <h6 class="text-muted text-uppercase mb-3">Overall Win Rate</h6>
                        <div class="d-flex align-items-center justify-content-center">
                            <i class="bi bi-graph-up-arrow text-success fs-1 me-3"></i>
                            <h2 class="display-4 fw-bold mb-0 text-dark"><%= winRate %>%</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Results List -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0"><i class="bi bi-list-check me-2 text-primary"></i>Finished Matches</h5>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Date</th>
                            <th>Match</th>
                            <th>League</th>
                            <th>Prediction</th>
                            <th class="text-center">Score</th>
                            <th class="text-center">Result</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (matches.length === 0) { %>
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted">
                                    No finished matches found.
                                </td>
                            </tr>
                        <% } else { %>
                            <% matches.forEach(match => { %>
                                <tr>
                                    <td class="ps-4 text-muted">
                                        <%= helpers.formatDate(match.match_date, 'MMM DD') %>
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column">
                                            <span class="fw-semibold"><%= match.home_team %></span>
                                            <span class="fw-semibold"><%= match.away_team %></span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark border">
                                            <%= match.league %>
                                        </span>
                                    </td>
                                    <td>
                                        <span class="text-primary fw-medium"><%= match.prediction %></span>
                                        <br>
                                        <small class="text-muted"><%= match.odds ? '@' + match.odds : '' %></small>
                                    </td>
                                    <td class="text-center fw-bold font-monospace fs-5">
                                        <%= match.result_score || '-' %>
                                    </td>
                                    <td class="text-center">
                                        <% if (match.bet_status === 'won') { %>
                                            <span class="badge bg-success rounded-pill px-3">WON</span>
                                        <% } else if (match.bet_status === 'lost') { %>
                                            <span class="badge bg-danger rounded-pill px-3">LOST</span>
                                        <% } else { %>
                                            <span class="badge bg-secondary rounded-pill px-3"><%= match.bet_status.toUpperCase() %></span>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } %>
                    </tbody>
                </table>
            </div>
            
            <!-- Pagination -->
            <% if (pagination.totalPages > 1) { %>
                <div class="card-footer bg-white py-3">
                    <nav>
                        <ul class="pagination justify-content-center mb-0">
                            <% if (pagination.hasPrevPage) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= pagination.prevPage %>">Previous</a>
                                </li>
                            <% } %>
                            
                            <% for(let i = 1; i <= pagination.totalPages; i++) { %>
                                <li class="page-item <%= i === pagination.currentPage ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                </li>
                            <% } %>
                            
                            <% if (pagination.hasNextPage) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= pagination.nextPage %>">Next</a>
                                </li>
                            <% } %>
                        </ul>
                    </nav>
                </div>
            <% } %>
        </div>
    </div>
</section>
