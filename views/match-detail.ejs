<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= match.home_team %> vs <%= match.away_team %> Prediction - BetVital</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
    <style>body { font-family: 'Inter', sans-serif; }</style>
</head>
<body class="bg-slate-50 text-slate-900">

    <nav class="bg-white shadow-sm p-4 sticky top-0 z-10">
        <div class="container mx-auto flex justify-between items-center">
            <a href="/" class="text-emerald-700 font-bold text-lg flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
                </svg>
                Back
            </a>
            <span class="text-xs font-bold bg-slate-100 px-2 py-1 rounded text-slate-500"><%= match.league %></span>
        </div>
    </nav>

    <!-- Match Header -->
    <div class="bg-white border-b border-gray-200 pb-8 pt-6">
        <div class="container mx-auto px-4 max-w-2xl">
            <div class="text-center text-xs text-gray-400 mb-4 font-mono">
                <%= new Date(match.match_date).toLocaleString() %>
            </div>
            
            <div class="flex justify-between items-center">
                <!-- Home -->
                <div class="text-center flex-1">
                    <% if(match.home_logo) { %>
                        <img src="<%= match.home_logo %>" class="w-16 h-16 mx-auto mb-2 object-contain">
                    <% } else { %>
                        <div class="w-16 h-16 bg-gray-200 rounded-full mx-auto mb-2"></div>
                    <% } %>
                    <h2 class="font-bold text-lg leading-tight"><%= match.home_team %></h2>
                    <div class="text-xs text-gray-500 mt-1 tracking-widest"><%= match.home_form ? match.home_form.split('').join(' ') : '' %></div>
                </div>

                <!-- VS -->
                <div class="px-4 text-center">
                    <div class="text-3xl font-black text-slate-200">VS</div>
                </div>

                <!-- Away -->
                <div class="text-center flex-1">
                    <% if(match.away_logo) { %>
                        <img src="<%= match.away_logo %>" class="w-16 h-16 mx-auto mb-2 object-contain">
                    <% } else { %>
                        <div class="w-16 h-16 bg-gray-200 rounded-full mx-auto mb-2"></div>
                    <% } %>
                    <h2 class="font-bold text-lg leading-tight"><%= match.away_team %></h2>
                    <div class="text-xs text-gray-500 mt-1 tracking-widest"><%= match.away_form ? match.away_form.split('').join(' ') : '' %></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Prediction Card -->
    <div class="container mx-auto px-4 -mt-6 max-w-xl relative z-10">
        <div class="bg-slate-900 text-white rounded-xl shadow-xl p-6 text-center border-t-4 border-emerald-500">
            <p class="text-xs text-slate-400 uppercase tracking-widest font-bold mb-2">Official BetVital Tip</p>
            <h1 class="text-3xl font-black text-white mb-2"><%= match.prediction %></h1>
            
            <div class="flex justify-center items-center gap-2 mt-4">
                <span class="text-xs font-bold text-emerald-400">Confidence: <%= match.confidence %>%</span>
                <div class="w-24 h-1.5 bg-slate-700 rounded-full">
                    <div class="h-full bg-emerald-500 rounded-full" style="width: <%= match.confidence %>%"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Analysis Content -->
    <div class="container mx-auto px-4 mt-8 max-w-2xl mb-12">
        <h3 class="font-bold text-xl text-slate-800 mb-4 flex items-center gap-2">
            <span class="w-1 h-6 bg-emerald-500 rounded-full"></span>
            Match Analysis
        </h3>
        <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-100 prose prose-slate max-w-none text-sm leading-relaxed text-gray-600">
            <p class="whitespace-pre-wrap"><%= match.analysis %></p>
        </div>

        <% if(match.affiliate_link) { %>
        <div class="mt-8">
            <a href="<%= match.affiliate_link %>" target="_blank" class="block w-full bg-yellow-400 hover:bg-yellow-500 text-yellow-900 font-black text-center py-4 rounded-xl shadow-lg transform hover:-translate-y-1 transition text-lg">
                ðŸ’° BET NOW & GET BONUS
            </a>
            <p class="text-center text-[10px] text-gray-400 mt-2">T&Cs Apply. 18+</p>
        </div>
        <% } %>
    </div>

</body>
</html>
